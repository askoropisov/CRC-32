            <Button Command="{Binding Generate}" Content="Сгенерировать" Background="LimeGreen"
                    ToolTip.Tip="Сгенерировать Verilog-файл" HorizontalAlignment="Center"/>
        </StackPanel>
    </Viewbox>
</UserControl>
