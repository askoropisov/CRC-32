                <!--First Row-->
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="0" Grid.Row="0">
                    <CheckBox IsChecked="{Binding PolyValue[31]}"/>
                    <TextBlock VerticalAlignment="Center">X³²</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="1" Grid.Row="0">
                    <CheckBox IsChecked="{Binding PolyValue[30]}"/>
                    <TextBlock VerticalAlignment="Center">X³¹</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="2" Grid.Row="0">
                    <CheckBox IsChecked="{Binding PolyValue[29]}"/>
