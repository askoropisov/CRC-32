                    <TextBlock VerticalAlignment="Center">X²⁶</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="7" Grid.Row="0">
                    <CheckBox IsChecked="{Binding PolyValue[24]}"/>
                    <TextBlock VerticalAlignment="Center">X²⁵</TextBlock>
                </StackPanel>

                <!--Second Row-->
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="0" Grid.Row="1">
                    <CheckBox IsChecked="{Binding PolyValue[23]}"/>
                    <TextBlock VerticalAlignment="Center">X²⁴</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="1" Grid.Row="1">
                    <CheckBox IsChecked="{Binding PolyValue[22]}"/>
                    <TextBlock VerticalAlignment="Center">X²³</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="2" Grid.Row="1">
                    <CheckBox IsChecked="{Binding PolyValue[21]}"/>
                    <TextBlock VerticalAlignment="Center">X²²</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="3" Grid.Row="1">
                    <CheckBox IsChecked="{Binding PolyValue[20]}"/>
                    <TextBlock VerticalAlignment="Center">X²¹</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="4" Grid.Row="1">
                    <CheckBox IsChecked="{Binding PolyValue[19]}"/>
                    <TextBlock VerticalAlignment="Center">X²⁰</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="5" Grid.Row="1">
                    <CheckBox IsChecked="{Binding PolyValue[18]}"/>
                    <TextBlock VerticalAlignment="Center">X¹⁹</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="6" Grid.Row="1">
